# inst configuration
# The default installer
[Distribution]
Distribution=fedora
Release=34

[Output]
Bootable=yes
BootProtocols=uefi
Format=gpt_btrfs
Hostname=installer
Output=inst_2109.img
OutputDir=mkosi.output/2109

[Packages]
Cache=../__sharedCache__
Packages=
	btrfs-progs
	dmidecode
	htop
	openssh-server
	passwd
	procps-ng
	shadow-utils
	systemd-networkd
	usbutils
	zstd

[Partitions]
RootSize=2G

[Validation]
BMap=yes
CheckSum=yes
Sign=no
Key=boxos_signature
Autologin=yes
